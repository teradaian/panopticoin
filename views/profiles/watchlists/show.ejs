<%- include('../../partials/header') %>
<link rel="stylesheet" href="/stylesheets/profile.css">
<%- include('../../partials/nav') %>

<main>
<h1><%= watchlist.title %></h1>
<p><%= isSelf ? "Your watchlist" : `${profile.name}'s watchlist` %></p>

<h4> <%= watchlist.description %> </h4>

<h1>Coins go here! <i class="fas fa-coins"></i></h1>

<% if(watchlist.comments.length) { %>
    <% watchlist.comments.forEach(comment => { %>
        <p> <%= comment.comment %> </p>
        <p> Author: <%= comment.author %> </p>
    <% }) %>
<% } else { %>
<p>No comments yet</p>
<% } %>

<% if(isSelf) { %>
<div class="options">
    <a href="/profiles/<%= profile._id %>/watchlists/<%= watchlist._id %>/edit" class="button button-clear">
        <h1><i class="far fa-edit fa-hover-hidden"></i> <i class="fas fa-edit fa-hover-show"></i></h1>
    </a>
    <form
        action="/profiles/watchlists/<%= watchlist._id %>?_method=DELETE"
        method="POST"
        >
        <button 
            type="submit" 
            class="button button-clear"
            id="delete" 
        >
        <h1><i class="far fa-eye-slash fa-hover-hidden"></i> <i class="fas fa-eye-slash fa-hover-show"></i></h1>
        </button>
    </form>
</div>
<% } %>

</main>



<%- include('../../partials/footer') %>
